---
import Layout from "../layouts/Layout.astro";
import { morePlaylists, playlists } from "../lib/data";
import PlaylistItemCard from "../components/PlaylistItemCard.astro";
import PlaylistCard from "../components/PlaylistCard.astro";
---

<Layout title="Definetly Not Spotify">
	<div
		id="playlist-container"
		class="relative transition-all duration-1000 bg-[#222222]"
		style="min-height:300px;--context-color:#20125A;"
	>
		<!-- <PageHeader /> -->
		<div class="relative z-10 px-6">
			<!-- Greeting -->Hola
			<div
				class="grid gap-y-2 gap-x-2 sm:grid-cols-2 lg:grid-cols-4 xl:grid-cols-2 mt-6"
			>
				{playlists.map((playlist) => <PlaylistItemCard playlist={playlist} />)}
			</div>
		</div>
		<div
			class="absolute inset-0 bg-gradient-to-t from-[#121212] via-[#121212]/80"
		>
		</div>
	</div>
    <div class="px-6 relative z-10 mt-4">
        <h2 class="text-2xl font-bold">Made For You</h2>
        <div class="flex flex-wrap mt-6 gap-1">
            {
                morePlaylists.map((playlist) => <PlaylistCard playlist = { playlist } />)
            }
        </div>
    </div>
</Layout>

