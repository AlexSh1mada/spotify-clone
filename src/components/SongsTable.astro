---
import Time from "@/icons/Time.astro"
import { type Song } from '@/lib/data'

interface Props {
    songs: Song[]
}

const { songs } = Astro.props
---

<table class="table-auto text-left min-w-full divide-y divide-white/10">
    <thead class="">
        <tr class="text-white/70 text-sm">
            <th class="px-4 py-2 text-sm font-medium">#</th>
            <th class="px-4 py-2 text-sm font-medium">Title</th>
            <th class="px-4 py-2 text-sm font-medium">Album</th>
            <th class="px-4 py-2 text-sm"><Time /></th>
        </tr>
    </thead>
    <tbody>
        <tr class="h-[16px]"></tr>
        {
            songs.map((song, index) => (
            <tr class="text-md hover:bg-white/10">
                <td class="px-4 py-2 text-white/70 rounded-tl-md rounded-bl-md w-5">{index + 1}</td>
                <td class="px-4 py-2 flex gap-3">
                    <picture>
                        <img src={song.image} alt={song.title} class="size-11 rounded-sm" />
                    </picture>
                    <div class="flex flex-col">
                        <h3>
                            {song.title}
                        </h3>
                        <span class="text-white/70 text-sm font-extralight">
                            {song.artists.join(', ')}
                        </span>
                    </div>
                </td>
                <td class="px-4 py-2 text-sm text-white/70">{song.album}</td>
                <td class="px-4 py-2 rounded-tr-md rounded-br-md">{song.duration}</td>
            </tr>
            ))
        }
    </tbody>
</table>